<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Panel</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">
  <div class="container">
    <h1 class="mb-4">üè† Shared Apartment Admin Panel</h1>
    <h2>Cleaning Schedule (Next 4 Weeks)</h2>
    <table class="table table-bordered">
      <thead><tr><th>Week</th><th>Kitchen</th><th>Bathroom</th><th>Toilet</th></tr></thead>
      <tbody>
        <% upcomingWeeks.forEach(w => { %>
          <tr><td><%= w.date %></td><td><%= w.kitchen %></td><td><%= w.bathroom %></td><td><%= w.toilet %></td></tr>
        <% }) %>
      </tbody>
    </table>

    <h2>Last 4 Expenses</h2>
    <table class="table table-bordered">
      <thead><tr><th>Date</th><th>Payer</th><th>Amount</th><th>Description</th></tr></thead>
      <tbody>
        <% expenses.forEach(e => { %>
          <tr><td><%= e.date %></td><td><%= e.payer %></td><td>‚Ç¨<%= e.amount %></td><td><%= e.description %></td></tr>
        <% }) %>
      </tbody>
    </table>

    <h2>Balances</h2>
    <% people.forEach(p => { %>
      <div class="card mb-3">
        <div class="card-header"><strong><%= p.name %></strong></div>
        <div class="card-body">
          <ul>
            <% balances.filter(b => b.person_from === p.name).forEach(b => { %>
              <li>Owes <%= b.person_to %>: ‚Ç¨<%= b.amount.toFixed(2) %></li>
            <% }) %>
            <% balances.filter(b => b.person_to === p.name).forEach(b => { %>
              <li>To Receive from <%= b.person_from %>: ‚Ç¨<%= b.amount.toFixed(2) %></li>
            <% }) %>
          </ul>
        </div>
      </div>
    <% }) %>

  </div>
</body>
</html>